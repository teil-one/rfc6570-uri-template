{
  "extends": "./tsconfig.json",

  "compilerOptions": {
    // Use Node.js native ECMAScript Module support
    "module": "node16",

    // Fix code coverage in Jest
    "sourceMap": true,

    // Remove TS151001 warning from ts-jest
    "esModuleInterop": true,

    // Allow importing from JSON
    "resolveJsonModule": true
  }
}
